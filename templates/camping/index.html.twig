{% extends 'base.html.twig' %}

{% block title %}Camping index{% endblock %}

{% block body %}
    <h1>Camping index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_camp</th>
                <th>Date_debut_camp</th>
                <th>Date_fin_camp</th>
                <th>Lieu_camp</th>
                <th>Descri_camp</th>
                <th>Nbre_place_camp</th>
                <th>Image_camp</th>
                <th>Prix_camp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for camping in campings %}
            <tr>
                <td>{{ camping.id }}</td>
                <td>{{ camping.nomCamp }}</td>
                <td>{{ camping.dateDebutCamp ? camping.dateDebutCamp|date('Y-m-d') : '' }}</td>
                <td>{{ camping.dateFinCamp ? camping.dateFinCamp|date('Y-m-d') : '' }}</td>
                <td>{{ camping.lieuCamp }}</td>
                <td>{{ camping.descriCamp }}</td>
                <td>{{ camping.nbrePlaceCamp }}</td>
                <td>{{ camping.imageCamp }}</td>
                <td>{{ camping.prixCamp }}</td>
                <td>
                    <a href="{{ path('camping_show', {'id': camping.id}) }}">show</a>
                    <a href="{{ path('camping_edit', {'id': camping.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('camping_new') }}">Create new</a>
{% endblock %}
