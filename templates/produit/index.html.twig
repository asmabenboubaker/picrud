{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_prod</th>
                <th>Date_prod</th>
                <th>Prix_prod</th>
                <th>Descri_prod</th>
                <th>Stock_prod</th>
                <th>Image_prod</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nomProd }}</td>
                <td>{{ produit.dateProd ? produit.dateProd|date('Y-m-d') : '' }}</td>
                <td>{{ produit.prixProd }}</td>
                <td>{{ produit.descriProd }}</td>
                <td>{{ produit.stockProd }}</td>
                <td>{{ produit.imageProd }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
